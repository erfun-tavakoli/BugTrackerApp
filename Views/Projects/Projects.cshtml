@model List<BugTrackerApp.Models.Project>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count == 0)
{
    <h3>
        No Projects found 
    </h3>
}
else
{

    <ol>
        @foreach(var item in Model)
        {
            <li>
                <p>
                    <em>
                        Name : @item.Name
                    </em>
                </p>
                <p>
                    <b>
                        Tickets
                    </b>
                </p>
                <ol>
                    @foreach(var ticket in item.Tickets)
                    {
                        <li>
                            <p>
                                Title : @ticket.Title
                            </p>
                            <p>
                                Description : @ticket.Description
                            </p>
                            <p>
                                Owner : @ticket.OwnerUser.Email
                            </p>
                            <p>
                                Assignend user : @ticket.AssignedToUser.Email
                            </p>
                        </li>
                    }
                </ol>
            </li>
        }
    </ol>